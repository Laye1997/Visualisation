                function saisie(nom,nombreheure,heuresup,avantage){
                    this.NomE=nom;
                    this.NH=nombreheure;
                    this.HS=heuresup;
                    this.AV=avantage;


                    saisie.prototype.getNomE=function(){
                        return this.NomE;
                    }

                    saisie.prototype.getNH=function(){
                        return this.nbheure;
                    }
                    saisie.prototype.getHS=function(){
                        return this.HS;
                    }
                    saisie.prototype.getAV=function(){
                        return this.AV;
                    }

                }
                //les rubriques qui composent le salaire net à payer sont:

                // 1ere rubrique :definition d'une fonction qui permet de calculer le salaire de base
                function salaire_de_base(nbheures){
                    if (document.formulaire.categorie.option[1].selected){
                        categorie=" A";

                    var SB=nbheures*10000;
                    }

                    if(document.formulaire.categorie.option[2].selected){
                        categorie="B";
                       var SB=nbheures*7500;
                    }
                    if(document.formulaire.categorie.option[3].selected){
                        categorie="C";

                        var SB=nbheures*5000;
                    }
                    return SB;

                }
                
                function heure_supplémentaire(nbheures){

                    if(nbheures==145){
                        if(document.formulaire.categorie.option[1].selected){
                            categorie="A";
                            var maj1=5*(10000+0.3*10000);
                        };
                        if(document.formulaire.categorie.option[2].selected){
                            categorie="B"; 
                            var maj1=5*(7500+0.3*7500);
                        }
                        if(document.formulaire.categorie.option[3].selected){
                            categorie="C";
                            var maj1=5*(5000+0.3*5000);
                        }
                        return maj1;
                    if(nbheure>145){
                        var rest=nbheure-140;
                        if(document.formulaire.categorie.option[1].selected){
                            categorie="A";
                            var maj2=5*(10000+0.3*10000)+rest*(10000+0.45*10000);
                        }
                        if(document.formulaire.categorie.option[2].selected){
                            categorie="B";
                            var maj2=5*(7500+0.3*7500)+rest*(7500+0.45*7500)

                    }   
                    if(document.formulaire.categorie.option[3].selected){
                        categorie="C";
                            var maj2=5*(5000+0.3*5000)+rest*(5000+0.45*5000)

                    }
                    return maj;
                }
            
                //calculons le salaire de l'employé
                function salaire(SB,HS,AV){
                    var S=parseInt("SB")+parseInt("HS")+parseInt("AV")
                    return S;
                }
                //calcule de la retenue a la source
                function retenu_source(S){
                    if(document.formulaire.categorie.option[1].selected){
                        categorie="A";
                        var RAS=0.1*S;
                    }
                    if(document.formulaire.categorie.option[2].selected){
                        categorie="B";
                        var RAS= 0.075*S;
                    }
                    if(document.formulaire.categorie.option[3].selected){
                        categorie="C";
                       var RAS= 0.05*S;
                    }
                    return RAS;
                }
                //calcule du salaire net
                function salaireNet(S,RAS){
                    var SN=S-RAS;
                    return SN;
                }
               

